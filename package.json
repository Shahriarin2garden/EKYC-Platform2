{
  "name": "ekyc-system",
  "version": "1.0.0",
  "description": "Enterprise KYC Application Platform - Full Stack System",
  "private": true,
  "scripts": {
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "install:all": "npm run install:frontend && npm run install:backend",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "test:all": "npm run test:backend && npm run test:frontend",
    "test:backend:watch": "cd backend && npm test -- --watch",
    "test:frontend:watch": "cd frontend && npm test -- --watch",
    "test:backend:coverage": "cd backend && npm test -- --coverage",
    "test:frontend:coverage": "cd frontend && npm test -- --coverage --watchAll=false",
    "test:coverage": "npm run test:backend:coverage && npm run test:frontend:coverage",
    "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "sonar": "node sonar-scanner.js",
    "sonar:status": "docker ps | findstr sonarqube",
    "sonar:logs": "docker logs sonarqube --tail 50",
    "sonar:start": "docker start sonarqube",
    "sonar:stop": "docker stop sonarqube",
    "postinstall": "echo 'Run npm run install:all to install all dependencies'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Shahriarin2garden/EKYC-Theme.git"
  },
  "keywords": ["kyc", "ekyc", "verification", "fintech", "react", "typescript"],
  "author": "Shahriar Hossain <shahriarhossain197@gmail.com>",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "sonarqube-scanner": "^4.2.3"
  }
}
